<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>CRUD Operations</title>
    <link rel="stylesheet" href="/css/style.css">
  </head>
  <body>
    <center>
      <img src="/images/download.png" />
      <h3>Mock JSON Database CRUD Operations</h3>

      <%= userData %>
      

      <!-- Add User Form -->
      <h4>Add User</h4>
      <form id="addUserForm" method="post" action="/users">
        <label for="username">Username:</label>
        <input type="text" id="username" name="username" required>
      
        <label for="first_name">First Name:</label>
        <input type="text" id="first_name" name="first_name" required>
      
        <label for="email">Email:</label>
        <input type="email" id="email" name="email" required>
      
        <button type="submit">Add User</button>
      </form>

      <!-- Edit User Form -->
      <h4>Edit User</h4>
      <form id="editUserForm" method="post" action="/users/:id/update">
        <label for="id">User ID:</label>
        <input type="number" id="edit_id" name="id" required>
      
        <label for="new_username">New Username:</label>
        <input type="text" id="new_username" name="new_username">
      
        <label for="new_first_name">New First Name:</label>
        <input type="text" id="new_first_name" name="new_first_name">
      
        <label for="new_email">New Email:</label>
        <input type="email" id="new_email" name="new_email">
      
        <button type="submit" onclick="updateUser()">Update User</button>
      </form>

      <!-- Delete User Form -->
      <h4>Delete User</h4>
      <form id="deleteUserForm" method="post" action="/users/:id/delete">
        <label for="id">User ID:</label>
        <input type="number" id="delete_id" name="id" required>
      
        <button type="submit" onclick="deleteUser()">Delete User</button>
      </form>
    </center>

    <script>
      function updateUser() {
        var editForm = document.getElementById("editUserForm");
        var id = document.getElementById("edit_id").value;
        editForm.action = "/users/" + id + "/update";
        editForm.submit();
      }

      function deleteUser() {
        var deleteForm = document.getElementById("deleteUserForm");
        var id = document.getElementById("delete_id").value;
        deleteForm.action = "/users/" + id + "/delete";
        deleteForm.submit();
      }
    </script>
  </body>
</html>